<% include ../partials/header%>
<div class="container">
    <div style="width:30%;margin:0 auto;">
        <h1 style="text-align:center">Creat New Camp</h1>
        <div style="text-align:center">
            <a href="/campgrounds">Back to CampGrounds</a>
        </div>
            <form method="POST" action="/campgrounds">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" placeholder="please write the name here">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number " name="price" placeholder="please write the price here" min=0.0 step=0.1>
                </div>
                <div class="form-group">
                    <label for="image">Image URL</label>
                    <input class="form-control" type="text" name="image" placeholder="please write the image url here">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" placeholder="please write the description here">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
                </div>
                <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
               
            </form>
    </div>
</div>
<% include ../partials/footer%>