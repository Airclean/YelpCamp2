<% include ../partials/header.ejs%>
<div class="container">
    <div style="width:30%;margin:0 auto;">
        <h1 style="text-align:center">Add New Comment to <%=camp.name%></h1>
        <div style="text-align:center">
            <a href="/campgrounds/<%=camp._id%>">Back to Camp</a>
        </div>
            <form method="POST" action="/campgrounds/<%=camp._id%>/comments">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="please write the comment here">
                </div>
                <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
               
            </form>
    </div>
</div>
